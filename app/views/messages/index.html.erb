<div class="container">
    <div class="row">
        <div class="col-xs-12">

          <div class="page-header">

            <h1>
              Messages
              <a href="/messages/new" class="btn btn-lg btn-primary">Write a New Message</a>
            </h1>
          </div>
          <body class="unique_bgimage">

        </div>
    </div>

    <div class="row"></div>
    <div class="row"></div>
    <div class="row">


              <table class="table table-striped table-hover">
                <tr>
                  <th>Recipient</th>
                  <th>Sender</th>
                  <th>Message text</th>
                  <th>Date</th>
                  <th>Actions</th>
                </tr>

                <% @messages.each do |message| %>
                <tr>
                  <td><%= message.recipient.f_name %></td>
                  <td><%= message.sender.f_name %></td>
                  <td><div>
                  <%= message.message_text %>   </div></td>
                  <td><%= message.created_at.strftime("%B %d, %Y") %></td>
                    <td><% if current_user.id == message.sender.id or current_user.id == message.recipient.id%>

                        <a href="/messages/<%= message.id %>" class="btn btn-primary">Show</a>
                        <a href="/messages/<%= message.id %>/edit" class="btn btn-warning">Edit</a>
                        <a href="/delete_message/<%= message.id %>" class="btn btn-danger" rel="nofollow">Delete</a>

                        <% else %>

                        <a href="/messages/<%= message.id %>" class="btn btn-primary">Show</a>
                      <!-- true -->
                    <% end %>
                  </td>
                  <!-- <td>
                    <a href="/messages/<%= message.id %>" class="btn btn-primary">Show</a>
                    <a href="/messages/<%= message.id %>/edit" class="btn btn-warning">Edit</a>
                    <a href="/delete_message/<%= message.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
                  </td> -->
                </tr>
                <% end %>
              </table>

            </body>


        </div>
    </div>
</div>



</div>

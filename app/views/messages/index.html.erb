<div class="container">
    <div class="row">
        <div class="col-xs-12">

          <div class="page-header">

            <h1>
              Messages
              <a href="/messages/new" class="btn btn-lg btn-primary">Write a Message</a>
            </h1>
          </div>
          <body class="unique_bgimage">

        </div>
    </div>

    <div class="row"></div>
    <div class="row"></div>
    <div class="row">
        <div class="col-md-offset-2 col-md-8">

              <table class="table table-striped table-hover">
                <tr>
                  <th>Recipient</th>
                  <th>Sender</th>
                  <th>Message text</th>
                  <th>Actions</th>
                </tr>

                <% @messages.each do |message| %>
                <tr>
                  <td><%= message.recipient_id %></td>
                  <td><%= message.sender_id %></td>
                  <td><%= message.message_text %></td>
                  <td>
                    <a href="/messages/<%= message.id %>" class="btn btn-primary">Show</a>
                    <a href="/messages/<%= message.id %>/edit" class="btn btn-warning">Edit</a>
                    <a href="/delete_message/<%= message.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
                  </td>
                </tr>
                <% end %>
              </table>

            </body>


        </div>
    </div>
</div>



</div>
